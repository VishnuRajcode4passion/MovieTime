<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:cardview="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#b7dee0e1">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:background="@drawable/weather"
        android:layout_above="@+id/card_view"
        android:layout_alignStart="@+id/textView10" />

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="370dp"
        android:layout_height="200dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        card_view:contentPadding="10dp"
        card_view:cardBackgroundColor="#eef2ec"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

    </android.support.v7.widget.CardView>

    <EditText
        android:id="@+id/search"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="Enter a city name"
        android:textColor="#3b5033"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView10" />

    <Button
        android:id="@+id/searchs"
        android:layout_width="102dp"
        android:backgroundTint="#9abc84"
        android:layout_height="36dp"
        android:layout_gravity="center_horizontal"
        android:text="Search"
        android:background="@drawable/button_bg"
        android:layout_alignBottom="@+id/card_view"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="38dp" />


    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="SearchLocation Here"
        android:id="@+id/textView10"
        android:layout_below="@+id/imageView4"
        android:layout_toStartOf="@+id/HomeButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/HomeButton"
        android:src="@drawable/homepage"
        android:backgroundTint="#f6f7f6"
        android:layout_alignTop="@+id/imageView4"
        android:layout_marginTop="38dp"
        android:layout_alignEnd="@+id/search" />


</RelativeLayout>
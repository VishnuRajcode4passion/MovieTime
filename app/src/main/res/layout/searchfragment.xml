<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:cardview="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#4CAF50">


    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        card_view:contentPadding="10dp"
        card_view:cardBackgroundColor="@android:color/holo_orange_light"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

    </android.support.v7.widget.CardView>

    <EditText
        android:id="@+id/search"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="Enter a city name"
        android:textColor="#3b5033"
        android:layout_above="@+id/searchs"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/searchs"
        android:layout_width="102dp"
        android:backgroundTint="#9abc84"
        android:layout_height="36dp"
        android:layout_gravity="center_horizontal"
        android:text="Search"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_bg"
        />


    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="SearchLocation Here"
        android:id="@+id/textView10"
        android:layout_alignTop="@+id/card_view"
        android:layout_alignEnd="@+id/searchs"
        android:layout_marginTop="33dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/HomeButton"
        android:src="@drawable/homepage"
        android:backgroundTint="#4CAF50"
        android:background="@drawable/button_bg"
        android:layout_above="@+id/card_view"
        android:layout_alignEnd="@+id/search"
        android:layout_marginBottom="37dp" />

</RelativeLayout>
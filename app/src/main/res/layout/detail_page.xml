<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#50b314"
        android:fitsSystemWindows="true"
        android:minHeight="?attr/actionBarSize">

        <ImageView
            android:id="@+id/goBackArrow"
            android:layout_width="22dp"
            android:layout_height="30dp"
            android:src="@drawable/arrows" />

        <TextView
            android:id="@+id/editText"
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:layout_toEndOf="@+id/goBackArrow"
            android:text=" Movie Details"
            android:textAppearance="?android:textAppearanceLarge"
            android:textStyle="bold" />

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="110dp"
        android:background="#84d438">

        <TextView
            android:id="@+id/Title_of_movie"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="47dp"
            android:hint="title"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textSize="25sp" />

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_margin="1dp"
        card_view:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="135dp">

            <ImageView
                android:id="@+id/movie_poster"
                android:layout_width="160dp"
                android:layout_height="154dp"
                android:layout_alignBottom="@+id/durationOfTheMovie"
                android:layout_alignParentTop="true" />

            <TextView
                android:id="@+id/year_of_relese"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:layout_toEndOf="@+id/movie_poster"
                android:layout_weight="0.20"
                android:text="Year"
                android:textColor="#000000" />

            <CheckBox
                android:id="@+id/checkBox_favorite"
                style="?android:attr/starStyle"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rating"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/movie_poster"
                android:checked="false"

                android:text="Favorite"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/rating"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/year_of_relese"
                android:layout_toEndOf="@+id/movie_poster"
                android:hint="Rating"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/durationOfTheMovie"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/checkBox_favorite"
                android:layout_below="@id/checkBox_favorite"
                android:hint="Duration"
                android:textColor="#000000" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:fillViewport="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:animateLayoutChanges="true">

                <TextView
                    android:id="@+id/movie_description"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:textColor="#000000"
                    android:textSize="10sp" />
            </RelativeLayout>
        </ScrollView>

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp">


        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="@android:color/transparent"
            android:divider="#e7e8ef"
            android:dividerHeight="1dp"
            android:listSelector="#ade263">


        </ListView>

    </RelativeLayout>
</LinearLayout>











<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="#8cf6faf7"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_margin="2dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardBackgroundColor="#e2e5e7"
        card_view:contentPadding="20dp"
        android:minHeight="50dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textSize="20sp"
                android:id="@+id/textView5"
                android:textColor="#060606"
                android:layout_marginTop="41dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/showicon" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textColor="#FFF703B6"
                android:gravity="top"
                android:textSize="18sp"
                android:id="@+id/textView8"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="80dp"
                android:layout_below="@+id/showicon"
                android:layout_alignEnd="@+id/showicon"
                android:layout_alignStart="@+id/showicon" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView5"
                android:layout_marginTop="20dp"
                android:gravity="start"
                android:textColor="#FFF703B6"
                android:textSize="38sp"
                android:id="@+id/textView9"
                android:layout_alignBottom="@+id/textView8"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/textView8" />
            <ImageView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"
                android:id="@+id/showicon"
                android:layout_below="@+id/textView5"
                android:layout_alignParentEnd="true" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="5dp"

                android:id="@+id/imageView"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView9"
                android:layout_alignBottom="@+id/textView7" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:textSize="18sp"
                android:textColor="#FFF703B6"
                android:id="@+id/textView7"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/imageView"
                android:layout_below="@+id/textView9" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:background="@drawable/weather"
        android:layout_gravity="center_horizontal" />


</LinearLayout>


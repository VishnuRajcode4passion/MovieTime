<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#3cc24a">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Weather Status"
            android:id="@+id/textView4"
            android:textSize="20sp"
            android:textColor="#251818"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageView3"
            android:src="@drawable/arrows"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:id="@+id/HomePage"
            android:src="@drawable/homepage"
            android:backgroundTint="#3cc24a"
            android:background="@drawable/button_bg"
            android:layout_marginEnd="43dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>



    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_margin="2dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardBackgroundColor="#ffffff"
        card_view:contentPadding="20dp"
        android:minHeight="50dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="263dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textSize="20sp"
                android:id="@+id/textView5"
                android:textColor="#76858c"
                android:layout_marginTop="38dp"
                android:layout_alignParentTop="true"
                android:layout_alignEnd="@+id/textView8" />
            <TextView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:textColor="#000000"
                android:gravity="top"
                android:textSize="18sp"
                android:id="@+id/textView8"
                android:layout_above="@+id/showicon"
                android:layout_below="@+id/textView5"
                android:layout_alignEnd="@+id/showicon" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textColor="#000000"
                android:textSize="38sp"
                android:textStyle="bold"
                android:id="@+id/textView9"
                android:layout_below="@+id/textView5"
                android:layout_alignParentStart="true"
                android:layout_above="@+id/imageView"
                android:layout_toStartOf="@+id/showicon" />
            <ImageView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"
                android:id="@+id/showicon"
                android:layout_above="@+id/textView7"
                android:layout_alignParentEnd="true" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imageView"
                android:src="@drawable/wind"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="81dp" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:textSize="18sp"
                android:textColor="#000000"
                android:id="@+id/textView7"
                android:layout_below="@+id/textView9"
                android:layout_alignEnd="@+id/showicon"
                android:layout_alignBottom="@+id/imageView" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>

